    "babel-eslint": "^8.2.3",
    "babel-loader": "^8.0.6",
    "cache-loader": "^1.2.2",
    "copy-webpack-plugin": "^4.5.2",
    "eslint": "^5.0.1",
    "eslint-config-airbnb": "^16.1.0",
    "file-loader": "^1.1.11",
    "fs-extra": "^4.0.2",
    "mini-program-webpack-loader": "1.0.13",
    "rimraf": "^2.6.2",
