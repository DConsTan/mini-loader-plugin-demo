{
  "name": "mini-loader-plugin-demo",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run dev:mini & npm run dev:plugin",
    "build": "npm run build:mini && npm run build:plugin",
    "ctrl + c": "退出后还会监听，需要手动 kill 进程",
    "dev:mini": "webpack --mode development --watch --config ./build/webpack.config.mini.js",
    "dev:plugin": "webpack --mode development --watch --config ./build/webpack.config.plugin.js",
    "build:mini": "webpack --mode production --config ./build/webpack.config.mini.js",
    "build:plugin": "webpack --mode production --config ./build/webpack.config.plugin.js"
  },
  "description": "mini loader 打包小程序插件示例",
